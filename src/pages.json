{
  "easycom": {
    "autoscan": true,
    // 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
    "custom": {
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/selected/selected",
      "style": {
        "navigationBarTitleText": "精选"
      }
    },
    {
      "path": "pages/service/service",
      "style": {
        "navigationBarTitleText": "服务"
      }
    },
    {
      "path": "pages/me/me",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/cart/cart",
      "style": {
        "navigationBarTitleText": "购物车"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    }
  ],
  "subPackages": [
    {
      "root": "packageA",
      "pages": [
        {
          "path": "product-detail/product-detail",
          "style": {
            "navigationBarTitleText": "商品详情"
          }
        }
      ]
    },
    {
      "root": "packageB",
      "pages": [
        {
          "path": "address/address",
          "style": {
            "navigationBarTitleText": "地址管理"
          }
        },
        {
          "path": "merchant/merchant",
          "style": {
            "navigationBarTitleText": "商家列表"
          }
        }
      ]
    }
  ],
  "preloadRule": {
    "pages/selected/selected": {
      "network": "wifi",
      "packages": ["packageA"]
    }
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "ffce2c",
    "backgroundColor": "#fff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "/static/common/images/home.png",
        "selectedIconPath": "/static/common/images/home-active.png"
      },
      {
        "pagePath": "pages/selected/selected",
        "text": "精选",
        "iconPath": "/static/common/images/sel.png",
        "selectedIconPath": "/static/common/images/sel-active.png"
      },
      {
        "pagePath": "pages/service/service",
        "text": "服务",
        "iconPath": "/static/common/images/service.png",
        "selectedIconPath": "/static/common/images/service-active.png"
      },
      {
        "pagePath": "pages/me/me",
        "text": "我的",
        "iconPath": "/static/common/images/me.png",
        "selectedIconPath": "/static/common/images/me-active.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
